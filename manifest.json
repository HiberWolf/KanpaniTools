{
  "manifest_version": 2,
  "name": "KanpaniTools",
  "description": "Kanpani Girl Game Helper",
  "version": "0.1.0",

  "devtools_page": "devtools.html",
  
  "icons": { 
    "128": "icon.png" 
  },
  
  "background": {
    "scripts": [
      "lib/amf.js",
      "lib/clipboard.min.js",
      "lib/global.js",
      "lib/jquery.min.js",
      
      "lib/KanpaniTools.js",
      "lib/KTAmfParser.js",
      "lib/KTNetworkHandler.js",

      "lib/Managers/KTCharacterManager.js",
      "lib/Managers/KTPlayerManager.js",
      "lib/Managers/KTUIManager.js"
    ]
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
